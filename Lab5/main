#include <stdio.h>
#include <locale.h>
#define N 10
int main(void)
{
	setlocale(LC_ALL, "Rus");

	int x[N]; // массив из N элементов
	int aver; // cумма цифр числа
	int i;
	int num = 0; // искомый элемент
	int aver_num = 0; //номер максимального элемента
	int aver_max=-1 ; // максимальная сумма цифр
	
	// ввод массива
	printf("Пожалуйста введите 10 чисел: ");
	for (i = 0; i < N; i++)
	{
		scanf_s("%d", &x[i]);
		
	}

	for (i = 0; i < N; i++)
	{
		aver = 0; // обнуляем сумму цифр
		num = x[i]; // присваеваем промежуточному элементу значение переменной
		do 
		{
			
				aver = aver + x[i] % 10; //добавляем в сумму последнюю цифру числа
				x[i] = x[i] / 10; //убираем один разряд

		} while (x[i]!= 0); // выполняем условие пока число не станет равно 0

		if (aver > aver_max) // сравнивем сумму цифр числа с максимальной
		{
			// присваиваем новые значения в случае нахождения максимума
			aver_max = aver;
			aver_num = num;
		}
	}
	    printf("Искомое число: %d\n", aver_num); // вывод искомого числа
		printf("Сумма цифр числа: %d\n", aver_max ); // вывод суммы цифр
		scanf_s("%d", num);
	return 0;
}
