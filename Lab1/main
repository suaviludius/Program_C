#include <stdio.h> // необходимо для корректного вызова функций ввода/вывода
# define Pi 3.141593

int main(void) // главная функция main не принимает
 // данных от операционной системы,
 // возвращает статус завершения

{// начало тела программы
 // описание переменных
	float R; // Радиус круга
	float A; // Сторона квадрата
	float S1, S2, S; // Площадь круга, площадь квадрата, искомая площадь
	// ввод исходных данных
	// вывод на экран подсказки: R =
	printf("R = ");  
	// ввод с клавиатуры значения переменной R
	scanf_s("%f", &R); 
	// вывод на экран подсказки: A =
	printf("A = ");
	// ввод с клавиатуры значения переменной A
	scanf_s("%f", &A);
	S1 = Pi * R*R;// вычисление площади круга
	printf("S1 = %f\n", S1); // вывод на экран значения переменной s1
	S2 = A * A;// вычисление площади квадрата
	printf("S2 = %f\n", S2); // вывод на экран значения переменной s2
	S = S1 - S2;// вычисление площади искомой фигуры
	// вывод результатов
	// вывод на экран искомого значения переменной s
	printf("S = %f\n",S);
	// программа возвращается признак корректного завершения
	return 0;
	// конец тела программы
}
